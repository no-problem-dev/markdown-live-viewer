{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(rm :*)",
      "Bash(rm\\t:*)",
      "Bash(git rm:*)",
      "Bash(git rm :*)",
      "Bash(unlink:*)",
      "Bash(shred:*)",
      "Bash(truncate:*)",
      "Bash(dd:*)",
      "Bash(> :*)",
      "Bash(sudo:*)",
      "Bash(chmod 000:*)",
      "Bash(chown:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(./secrets/**)",
      "Edit(./.git/**)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "mcp__*"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/block-deletion.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/protect-files.py"
          }
        ]
      }
    ]
  }
}